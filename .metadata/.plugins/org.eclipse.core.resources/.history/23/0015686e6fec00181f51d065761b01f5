import br.com.easypark.backend.data.PedidoDAO;
import br.com.easypark.backend.data.ProdutoDAO;
import br.com.easypark.backend.model.Cliente;
import br.com.easypark.backend.model.Mesa;
import br.com.easypark.backend.model.Pedido;
import br.com.easypark.backend.model.dto.PedidoEntradaDTO;

@Service
public class PedidoService {

	@Autowired
	private PedidoDAO pedidoDAO;
	
	@Autowired
