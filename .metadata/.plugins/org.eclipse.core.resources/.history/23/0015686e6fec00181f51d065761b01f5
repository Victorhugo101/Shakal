	@Autowired
	private ProdutoDAO produtoDAO;
	
	@Autowired
	private MesaDAO mesaDAO;
	
	public PedidoEntradaDTO save(PedidoEntradaDTO pedidoEntradaDTO) {
		
		Pedido p;
		Cliente c = clienteDAO.findById(pedidoEntradaDTO.getCliente()).get();
		Mesa m = mesaDAO.findById(pedidoEntradaDTO.getMesa());
		
	}
}
